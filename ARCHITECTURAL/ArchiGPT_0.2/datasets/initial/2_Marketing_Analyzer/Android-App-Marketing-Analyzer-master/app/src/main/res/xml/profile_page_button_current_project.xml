<?xml version="1.0" encoding="utf-8"?>

<androidx.preference.PreferenceScreen  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="@dimen/button_submit_width"
    android:layout_width="@dimen/button_submit_height">

    <androidx.preference.SwitchPreference
        android:defaultValue="true"
        android:key="example_switch"
        android:summary="Turn this option on or off"
        android:title="Settings option" />

    <Button
        android:id="@+id/button"
        android:layout_width="@dimen/button_submit_width"
        android:layout_height="@dimen/button_submit_height"
        android:text="Button"
        android:layout_marginBottom="5dp"/>

</androidx.preference.PreferenceScreen>